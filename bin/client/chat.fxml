<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.ChatController">

    <left>
        <VBox spacing="0" prefWidth="250" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 0 1 0 0;">
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #2196F3; -fx-padding: 15;">
                <Label text="Chats" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="16.0" />
                    </font>
                </Label>
            </HBox>
            
            <ListView fx:id="usersList" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-width: 0;" />
        </VBox>
    </left>

    <center>
        <VBox style="-fx-background-color: #efeae2;"> <HBox alignment="CENTER_LEFT" style="-fx-background-color: #2196F3; -fx-padding: 10; -fx-border-color: #1976D2; -fx-border-width: 0 0 1 0;">
                 <Label fx:id="statusLabel" text="Connected" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="14.0" />
                    </font>
                 </Label>
                 
                 <TextField fx:id="nameField" visible="false" managed="false"/>
                 <TextField fx:id="hostField" visible="false" managed="false"/>
                 <TextField fx:id="portField" visible="false" managed="false"/>
                 <Button fx:id="connectButton" visible="false" managed="false"/>
                 <Button fx:id="disconnectButton" visible="false" managed="false"/>
            </HBox>

            <javafx.scene.control.ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS" 
                      style="-fx-background: #efeae2; -fx-border-color: transparent;">
                <content>
                    <VBox fx:id="chatBox" spacing="10" style="-fx-background-color: #efeae2; -fx-padding: 15;" />
                </content>
            </javafx.scene.control.ScrollPane>

            <HBox spacing="10" style="-fx-background-color: #f0f2f5; -fx-padding: 10; -fx-border-color: #d1d7db; -fx-border-width: 1 0 0 0;">
                <TextField fx:id="inputField" promptText="Type a message..." HBox.hgrow="ALWAYS" 
                           style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 10 15; -fx-background-color: white;"/>
                <Button fx:id="sendButton" text="âž¤" 
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 20;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>