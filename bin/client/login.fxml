<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.LoginController" style="-fx-background-color: #f0f2f5;">
    
    <VBox fx:id="loginPane" alignment="CENTER" spacing="15.0" maxWidth="350" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
        <Label text="Welcome Back?">
            <font><Font name="Segoe UI Bold" size="22.0" /></font>
        </Label>
        
        <TextField fx:id="ipField" promptText="Server IP (e.g. 192.168.1.5)" text="localhost" style="-fx-padding: 10;"/>
        
        <TextField fx:id="loginUserField" promptText="Username" style="-fx-padding: 10;"/>
        <PasswordField fx:id="loginPassField" promptText="Password" style="-fx-padding: 10;"/>
        
        <Button fx:id="loginBtn" text="Login" maxWidth="Infinity" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-cursor: hand;"/>
        
        <Hyperlink fx:id="forgotPasswordLink" text="Forgot Password? / Login via Email" style="-fx-text-fill: #2196F3;"/>
        
        <Label text="— OR —" textFill="#999999"/>
        
        <Button fx:id="goToRegisterBtn" text="Create New Account" maxWidth="Infinity" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-cursor: hand;"/>
    </VBox>

    <VBox fx:id="registerPane" visible="false" alignment="CENTER" spacing="15.0" maxWidth="350" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
        <Label text="Create Account">
            <font><Font name="Segoe UI Bold" size="22.0" /></font>
        </Label>
        
        <TextField fx:id="regUserField" promptText="Choose Username" style="-fx-padding: 10;"/>
        <PasswordField fx:id="regPassField" promptText="Choose Password" style="-fx-padding: 10;"/>
        <TextField fx:id="regEmailField" promptText="Email Address" style="-fx-padding: 10;"/>
        
        <Button fx:id="registerBtn" text="Sign Up" maxWidth="Infinity" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-cursor: hand;"/>
        
        <Button fx:id="backToLoginBtn1" text="Back to Login" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: #666; -fx-cursor: hand;"/>
    </VBox>

    <VBox fx:id="otpPane" visible="false" alignment="CENTER" spacing="15.0" maxWidth="350" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
        <Label text="Login via Email">
            <font><Font name="Segoe UI Bold" size="22.0" /></font>
        </Label>
        
        <Label text="Enter your registered email to receive a login code." wrapText="true" textAlignment="CENTER" textFill="#666"/>
        
        <TextField fx:id="otpEmailField" promptText="Your Email Address" style="-fx-padding: 10;"/>
        
        <Button fx:id="sendOtpBtn" text="Send Access Code" maxWidth="Infinity" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-cursor: hand;"/>
        
        <Button fx:id="backToLoginBtn2" text="Back to Login" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: #666; -fx-cursor: hand;"/>
    </VBox>

    <Label fx:id="globalErrorLabel" text="Error Message" textFill="RED" visible="false" StackPane.alignment="BOTTOM_CENTER" style="-fx-padding: 10; -fx-background-color: rgba(255,0,0,0.1); -fx-background-radius: 5;">
        <StackPane.margin>
            <Insets bottom="20"/>
        </StackPane.margin>
    </Label>

</StackPane>